<h1>All Creeks</h1>

<% @creeks.each do |creek| %>
    <div class="card">
        <%= cl_image_tag creek.photo.key, width: 400, height: 300, crop: :fill if creek.photo.attached? %>
        <h2 class="title"><%= creek.title %></h2>
        <h3 class="city"><%= creek.city %></h3>
        <h3 class="country"><%= creek.country %></h3>
        <h4 class="price"><%= creek.price %>â‚¬/day</h4>
        <%= link_to "Show", creek_path(creek) %>
    </div>
<% end %>