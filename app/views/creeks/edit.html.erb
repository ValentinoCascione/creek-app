<h1>Edit my hosting creek</h1>
<div class="form">
    <%= form_for [@creek] do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <br>
        <%= f.label :country %>
        <%= f.text_field :country %>
        <br>
        <%= f.label :city %>
        <%= f.text_field :city %>
        <br>
        <%= f.label :available? %>
        <%= f.check_box :available %>
        <br>
        <%= f.label :photo, class: 'label-photo btn', input_html: {value: 'abc'}, as: :text %>
        <%= f.file_field :photo %>
        <br>
        <%= f.submit 'Create', class: 'btn green' %>
    <% end %>
</div>

<%= link_to 'Back', mycreeks_path, class: 'btn' %>