<h1>New hosting creek</h1>
<div class="my-form">
    <%= form_for [@creek] do |f| %>
        <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title,  placeholder: "Title" %>
        </div>
        <br>
        <div class="field">
            <%= f.label :country %>
            <%= f.text_field :country,  placeholder: "Country" %>
        </div>
        <br>
        <div class="field">
            <%= f.label :city %>
            <%= f.text_field :city,  placeholder: "City" %>
        </div>
        <br>
        <div class="field">
            <%= f.label :Available? %>
            <p><%= f.check_box :available,  placeholder: "Available?" %></p>
        </div> 
        <br>
        <div class="field">
            <%= f.label :price %>
            <%= f.text_field :price,  placeholder: "Price" %>
        </div>
        <br>
        <div class="field">
            <%= f.label :capacity %>
            <%= f.text_field :capacity,  placeholder: "Capacity" %>
        </div>
        <br>
        <div class="field">
            <%= f.label :description %>   
            <%= f.text_area :description,  placeholder: "Description" %>
        </div>
        <br>
        <div class="container-photo">
            <div class="field">
                <%= f.label :photo, class:"photo" %>
                <%= f.file_field :photo %>
            </div>
        </div>
        <br>
        <div class="submit">
        <%= f.submit %>
        </div>
    <% end %>
</div>