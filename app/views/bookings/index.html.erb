    <div class="whole-container">
        <div class="container-left">
            <div class="cards">
                <% @bookings.each do |mybook| %>
                <div class="card">
                    <div class="width-img">
                        <%= cl_image_tag mybook.creek.photo.key if mybook.creek.photo.attached? %>
                    </div>
                    <div class="details">
                        <h2 class="title"><%= mybook.creek.title %></h2>
                        <div class="localisation">
                            <h3 class="city"><%= mybook.creek.city %>, &nbsp</h3>
                            <h3 class="country"><%= mybook.creek.country %></h3>
                        </div>
                        <h4 class="price"><%= mybook.creek.price %>€/day</h4>
                        <div class="big-btn">
                            <%= link_to "Delete this book", booking_path(mybook), method: :delete, class: 'btn red' %>
                        </div>
                    </div>
                </div>
                <% end %>
        </div>
    </div>

    <div class="container-right">
      <div
        id="map" style="width: 90%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
</div>